{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "./dist",
        "module": "ES2015",
        "target": "ES5",
        "outDir": "./dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules"]
}